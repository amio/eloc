{
  "name": "eloc",
  "version": "1.3.2",
  "description": "1MB cli for markdown presentation authoring",
  "repository": "amio/eloc",
  "license": "MIT",
  "bin": "dist/index.js",
  "scripts": {
    "bootstrap": "npm run build -w markdown-deck",
    "dev": "nodemon -w src -e js,ts -x npm run build",
    "prebuild": "rm -rf dist",
    "build": "esbuild --bundle src/index.ts --outdir=dist --platform=node --minify",
    "postbuild": "npm run bootstrap && cp src/editing.js dist",
    "now-build": "npm run bootstrap && npm run build && node dist/index.js build deck.md -t 'The eloquent cli'",
    "prepack": "npm run build"
  },
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/micromatch": "^4.0.1",
    "@types/mri": "^1.1.0",
    "@types/node": "^16.18.11",
    "@types/serve-handler": "^6.1.0",
    "esbuild": "^0.17.8",
    "fs-extra": "^11.1.0",
    "globby": "^13.1.3",
    "kleur": "^4.1.4",
    "markdown-deck": "^1.7.2",
    "micri": "^4.3.0",
    "micro-fork": "^3.0.0",
    "micromatch": "^4.0.2",
    "mri": "^1.1.4",
    "nodemon": "^2.0.4",
    "open": "^8.0.2",
    "serve-handler": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=16"
  }
}
